<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/llItem"
    android:layout_width="match_parent"
    android:layout_height="121dp"
    android:background="@color/colorWhite">

    <android.support.v7.widget.CardView
        android:id="@+id/cv"
        android:layout_width="113dp"
        android:layout_height="92dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp5"
        android:layout_marginRight="@dimen/side_distance"
        app:cardCornerRadius="@dimen/dp4"
        app:cardElevation="@dimen/dp2">

        <ImageView
            android:id="@+id/iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@mipmap/panda" />
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp10"
        android:layout_marginTop="@dimen/dp10"
        android:layout_toLeftOf="@id/cv"
        android:lines="1"
        android:paddingTop="@dimen/dp4"
        android:paddingBottom="@dimen/dp5"
        android:textColor="@color/emphasisTextview"
        android:textSize="@dimen/dp15"
        tools:text="嗯嗯，就是" />

    <TextView
        android:id="@+id/tv2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv"
        android:layout_marginLeft="@dimen/dp10"
        android:layout_toLeftOf="@id/cv"
        android:ellipsize="end"
        android:lineSpacingExtra="2.5dp"
        android:maxLines="3"
        android:paddingTop="@dimen/dp2"
        android:paddingBottom="@dimen/dp5"
        android:textColor="@color/defaultTextview"
        android:textSize="@dimen/dp13"
        tools:text="嗯嗯，嗯嗯，就是嗯就是嗯嗯就是嗯嗯就是嗯嗯就是嗯嗯嗯，就是嗯嗯，就是嗯嗯，就是嗯嗯，就是嗯嗯，就是嗯嗯，就是嗯嗯，就是就是" />

    <TextView
        android:id="@+id/tv3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv2"
        android:layout_marginLeft="@dimen/dp10"
        android:layout_toLeftOf="@id/cv"
        android:lines="1"
        android:paddingTop="@dimen/dp2"
        android:paddingBottom="@dimen/dp5"
        android:textColor="@color/color_8c8c8c"
        android:textSize="@dimen/dp11"
        tools:text="嗯嗯，就是" />

    <View
        style="@style/Line_e0e0e0_Horizontal"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@id/cv" />

</RelativeLayout>
